extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-blue 
            h1 #{titulo}
        .w3-container 
            p Compositores deste período: 
                ol 
                    each compositor in compositores
                        li 
                            a(href="/compositores/" + compositor.id)= compositor.nome
        
        footer.w3-container.w3-blue
            h5 
                span [ 
                    a(href="/periodos") Voltar à lista de períodos
                span ]