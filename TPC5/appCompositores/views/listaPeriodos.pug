extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-blue
            h1 #{titulo} 
            a(href="/periodos/add") Novo Período
        .w3-container
            table.w3-table-all
                tr
                    th Nome 
                each item in Periodos
                    tr
                        td
                            a(href="/periodos/" + item.nome )= item.nome

        footer.w3-container.w3-blue
            h5 
                span [ 
                    a(href="/") Voltar à página inicial 
                span ]