extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-blue
            h1 #{titulo}
        .w3-container 
                p Nome: #{pessoa.nome}
                p Idade: #{pessoa.idade}
                p Sexo: #{pessoa.sexo}
                p Morada: #{pessoa.morada.cidade}, #{pessoa.morada.distrito}
                p BI: #{pessoa.BI}
                p CC: #{pessoa.CC}
                p Descrição: #{pessoa.descricao}
                p Profissão: #{pessoa.profissao}
                p Partido Político: #{pessoa.partido_politico.party_abbr} - #{pessoa.partido_politico.party_name}
                p Religião: #{pessoa.religiao}
                p Desportos: #{pessoa.desportos.join(', ')}
                p Animais: #{pessoa.animais.join(', ')}
                p Figura Pública PT: #{pessoa.figura_publica_pt.join(', ')}
                p Marca do Carro: #{pessoa.marca_carro}
                p Destinos Favoritos: #{pessoa.destinos_favoritos.join(', ')}
                p Atributos: 
                    ul
                        li Fumador: #{pessoa.atributos.fumador ? 'Sim' : 'Não'}
                        li Gosta de Cinema: #{pessoa.atributos.gosta_cinema ? 'Sim' : 'Não'}
                        li Gosta de Viajar: #{pessoa.atributos.gosta_viajar ? 'Sim' : 'Não'}
                        li Acorda Cedo: #{pessoa.atributos.acorda_cedo ? 'Sim' : 'Não'}
                        li Gosta de Ler: #{pessoa.atributos.gosta_ler ? 'Sim' : 'Não'}
                        li Gosta de Música: #{pessoa.atributos.gosta_musica ? 'Sim' : 'Não'}
                        li Gosta de Comer: #{pessoa.atributos.gosta_comer ? 'Sim' : 'Não'}
                        li Gosta de Animais de Estimação: #{pessoa.atributos.gosta_animais_estimacao ? 'Sim' : 'Não'}
                        li Gosta de Dançar: #{pessoa.atributos.gosta_dancar ? 'Sim' : 'Não'}
                        li Comida Favorita: #{pessoa.atributos.comida_favorita}


        footer.w3-container.w3-blue
            h5 
                span [ 
                    a(href="/pessoas") Voltar à lista de pessoas
                span ]